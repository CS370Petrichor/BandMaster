<?xml version="1.0" encoding="utf-8"?>
<</android.support.constraint.ConstraintLayo xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewSong">

    <LinearLayout
        android:orientation="vertical"
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guitar_button"
            android:text="@string/guitar"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/drum_button"
            android:text="@string/drum"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bass_button"
            android:text="@string/bass"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/keyboard_button"
            android:text="@string/keyboard"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>